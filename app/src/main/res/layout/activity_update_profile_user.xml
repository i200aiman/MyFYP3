<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateProfileUser">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/ivProfileUpdate"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                app:srcCompat="@android:drawable/sym_def_app_icon"
                />


            <EditText
                android:id="@+id/etNameUpdate"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:drawableLeft="@drawable/ic_person"
                android:inputType="textPersonName"
                android:drawablePadding="10dp"


                android:textColorHint="#C609A0" />


            <EditText
                android:id="@+id/etPhoneUpdate"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:inputType="textPhonetic"
                android:textColorHint="#C609A0"

                android:layout_gravity="center"
                android:drawableLeft="@drawable/ic_local"
                android:drawablePadding="10dp"
                android:layout_marginTop="15dp"
                android:padding="20dp"
                />

            <EditText
                android:id="@+id/etEmailUpdate"
                android:layout_width="300dp"
                android:layout_height="wrap_content"

                android:textColorHint="#C609A0"

                android:layout_gravity="center"
                android:drawableLeft="@drawable/ic_email"
                android:drawablePadding="10dp"
                android:layout_marginTop="15dp"
                android:padding="20dp"
                android:inputType="textEmailAddress"
                />



            <Button
                android:id="@+id/btnSave"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:text="Save"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:layout_marginTop="20dp"
                android:background="@drawable/button"/>




        </LinearLayout>

    </ScrollView>



</RelativeLayout>